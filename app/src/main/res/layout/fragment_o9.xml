<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:id="@+id/contain"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="10.0dip"
            android:background="@drawable/background_card"
            android:orientation="vertical"
            android:padding="10.0dip">

            <TextView
                android:id="@+id/lblO24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.4) Did you /your child visit / consult a health provider (hospital / health centre / clinic / Dispensary / Pharmacy / chemist /shop / Traditional Birth Attendant(TBA) &amp; Traditional Healers, Religious /cultural Healers)?"
                android:textSize="@dimen/text_size_large" />

            <RadioGroup
                android:id="@+id/rdgO24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.0dip">

                <RadioButton
                    android:id="@+id/rdgO24a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="Yes"
                    android:textSize="@dimen/text_size_large" />

                <RadioButton
                    android:id="@+id/rdgO24b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:textSize="@dimen/text_size_large" />

                <RadioButton
                    android:id="@+id/rdgO24c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Don't know"
                    android:textSize="@dimen/text_size_large" />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>
</ScrollView>