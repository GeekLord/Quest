<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/dash_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3.0dip"
        android:layout_marginLeft="6.0dip"
        android:layout_marginRight="6.0dip"
        android:layout_marginTop="6.0dip"
        android:layout_weight="1.0"
        android:background="@drawable/background_card"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btnModuleOne"
            android:layout_width="120.0dip"
            android:layout_height="120.0dip"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/dash1" />

        <TextView
            android:id="@+id/txAroundMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Baseline Questionnaire"
            android:textSize="20.0sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dash_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4.0dip"
        android:layout_marginBottom="6.0dip"
        android:layout_marginLeft="6.0dip"
        android:layout_marginRight="6.0dip"
        android:layout_marginTop="3.0dip"
        android:layout_weight="1.0"
        android:background="@drawable/background_card"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btnModuleTwo"
            android:layout_width="120.0dip"
            android:layout_height="120.0dip"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/dash2" />

        <TextView
            android:id="@+id/txDirectory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Follow Up Questionnaire"
            android:textSize="20.0sp" />
    </LinearLayout>
</LinearLayout>